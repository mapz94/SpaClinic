<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:padding="24dp"
    >
    <TextView
        android:id="@+id/dialogTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:textSize="24sp"
        android:text="Nuevo Servicio"/>
    <EditText
        android:id="@+id/serviceName"
        android:layout_below="@id/dialogTitle"
        android:layout_marginVertical="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Nombre del servicio:"/>
    <EditText
        android:id="@+id/serviceCost"
        android:layout_below="@id/serviceName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Costo del servicio:"
        android:inputType="number"
        />
    <LinearLayout
        android:id="@+id/createActions"
        android:layout_marginVertical="8dp"
        android:layout_below="@id/serviceCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        >
        <Button
            android:layout_alignLeft="@id/createButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="4dp"
            android:background="@android:color/transparent"
            android:text="Cancelar"
            android:textColor="@color/design_default_color_primary"
            />

        <Button
            android:id="@+id/createButton"
            android:layout_marginHorizontal="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Crear"/>

    </LinearLayout>


</RelativeLayout>